include ../../mixins/pug/svg-icon
block variables
    -
        var baseDir = './';

doctype html
html(lang="ru")
    //- Include head
    include ./head

    body(class=pageClass)
        .wrapper
            div(class=`wrapper__content ${(pageClass === 'homepage') ? 'wrapper__content_bg' : ''}`)
                //- Include header
                include ../../components/header/header

                if (pageClass !== 'homepage')
                    nav.breadcrumbs.mb-sm-30
                        .container
                            ul.breadcrumbs__list
                                li
                                    a(href="/") Главная
                                    span.breadcrumbs__divider /

                                li.is-active #{title}
                block welcome
                block menuServices
            .wrapper__content
                block numbers
                block basic-services
                block actual-action
                block consultation
                block feedback
                block how
                block interior
                block equipment
                //- block top-position

                //- .container
                //-     .row
                //-         block columns

                //- block bottom-position

            //- Include footer
            include ../../components/footer/footer

        //- Include callback
        include ../../components/form/form--callback

        a.go-top.go-top--js(href='#')
            +icon('arrow-up')

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
        script(src=`${baseDir}js/main.js`)

        block script
